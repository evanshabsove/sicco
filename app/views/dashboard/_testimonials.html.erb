<div class="add-button-container">
  <%= button_tag "+", class:"btn btn-primary add-button", id: "testimonial" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @testimonials.each do |a, index| %>
    <tr>
      <th scope="row"><%= index %></th>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
      <td><%= button_tag "Edit", class:"btn btn-primary edit-button" %></td>
      <td><%= button_tag "Delete", class:"btn btn-primary delete-button" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
