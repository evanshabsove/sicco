<script type="text/javascript">
  $(function(){
    $('#name').on("change", function(){
      if ($(this).val() === '1') {
        $('.option-2').css({
          display: 'none'
        });
        $('.option-3').css({
          display: 'none'
        });
        $('.option-1').fadeIn(2000);
      } else if ($(this).val() === '2') {
        $('.option-1').css({
          display: 'none'
        });
        $('.option-3').css({
          display: 'none'
        });
        $('.option-2').fadeIn(2000);
      } else if ($(this).val() === '3') {
          $('.option-1').css({
            display: 'none'
        });
        $('.option-2').css({
          display: 'none'
        });
        $('.option-3').fadeIn(2000);
      };
    });
  });
</script>
